    <div class="absolute bottom-1/3 right-1/4 w-80 h-80 bg-light-900/1 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Badge -->
    <div class="mb-8 animate-slide-up">
      <span class="inline-block px-4 py-2 bg-dark-700/50 text-light-700 border border-dark-600/50 rounded-full text-sm font-medium backdrop-blur-sm">
