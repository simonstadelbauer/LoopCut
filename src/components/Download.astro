        <div class="text-center">
          <div class="text-3xl font-bold text-light-900 mb-2">4.9</div>
          <div class="text-sm text-light-600">App Store</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-light-700 mb-2">1K+</div>
          <div class="text-sm text-light-600">Downloads</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-light-900 mb-2">98%</div>
          <div class="text-sm text-light-600">Zufrieden</div>
        </div>
      </div>
    </div>

    <!-- Bottom CTA -->
    <div class="mt-16 animate-slide-up" style="animation-delay: 0.6s;">
